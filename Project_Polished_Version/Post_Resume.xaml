<Window x:Class="Project_Polished_Version.Post_Resume"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Polished_Version"
        mc:Ignorable="d"
        Height="267" Width="800"
        Title="UM HIRE"
 Icon="Images/UMHIREICON.ico">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Write your news:" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>
            <TextBox x:Name="PostTextBox" 
                 Height="150" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"/>
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
                <Button Content="Cancel" 
                    Width="80" 
                    Margin="0,0,10,0" Click="Cancel_Post_btn" 
                   />
                <Button Content="Post" 
                    Width="80" Click="Post_btn_click" 
                  />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
